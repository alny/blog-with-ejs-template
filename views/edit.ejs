<% layout('layout/layout') -%>

    <header class="intro-header" style="background-image: url('img/home-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>Update a Post</h1>
                        <hr class="small">
                        <span class="subheading">Update a new Blog Post Here</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <form class="form-inline" action="/<%= sPost._id %>/edit" method="post">
                <div class="form-group">
                    <label for="exampleInputName2">Title</label>
                    <input type="text" class="form-control" id="exampleInputName2" name="title" placeholder="Title">
                </div>
                <br>
                <hr>
                <div class="form-group">
                    <label for="exampleInputEmail2">Author</label>
                    <input type="text" class="form-control" id="exampleInputEmail2" name="author" placeholder="Author">
                </div>
                <br>
                <hr>
                <div class="form-group">
                    <label for="exampleInputName2">Content</label>
                    <input type="text" class="form-control" id="exampleInputName2" name="content" placeholder="Content">
                </div>
                <br>
                <hr>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
