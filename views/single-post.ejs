<% layout('layout/layout') -%>



        <!-- Page Header -->
        <!-- Set your background image for this header on the line below. -->
        <header class="intro-header" style="background-image: url('img/post-bg.jpg')">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                        <div class="post-heading">
                            <h1><%= sPost.title %></h1>
                            <h2 class="subheading"><%= sPost.content %></h2>
                            <span class="meta">Posted by <a href="#"><%= sPost.author %></a> <%= sPost.date.toDateString() %></span>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Post Content -->
        <article>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                        <p>Never in all their history have men been able truly to conceive of the world </p>

                    </div>
                </div>
            </div>
        </article>
